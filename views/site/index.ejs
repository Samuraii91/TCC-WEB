            <% produtos.forEach(prod => { %>
                <div class="card-produto">
                    <img 
                        src="<%= prod.imagem ? prod.imagem : 'https://via.placeholder.com/300x200?text=Sem+Imagem' %>"
                        alt="<%= prod.nome %>">

                    <div class="produto-info">
                        <h3><%= prod.nome %></h3>
                        <p class="preco">R$ <%= prod.preco.toFixed(2) %></p>

                        <% if (prod.categoria) { %>
